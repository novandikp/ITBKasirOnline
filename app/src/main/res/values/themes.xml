<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AuthApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#795644</item>
        <item name="colorPrimaryVariant">#795644</item>
        <item name="colorOnPrimary">#708090</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#708090</item>
        <item name="colorSecondaryVariant">#708090</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AuthApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AuthApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AuthApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>