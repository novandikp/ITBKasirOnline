<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pengaturan.PengaturanFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:id="@+id/laporanPendapatan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/layoutLaporanPendapatan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconLaporanPendapatan"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="7dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="7dp"
                        android:src="@drawable/ic_master_category" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textLaporanPendapatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="6dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:text="Pendapatan"
                            android:textColor="#3f4f4f"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/laporanPenjualan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                >

                <LinearLayout
                    android:id="@+id/layoutLaporanPenjualan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconPenjualan"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="7dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="7dp"
                        android:src="@drawable/ic_master_product" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textLaporanPenjualan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="6dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:text="Penjualan"
                            android:textColor="#3f4f4f"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/laporanPenjualanBarang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconLaporanPenjualanBarang"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="7dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="7dp"
                        android:src="@drawable/ic_master_satuan" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textLaporanPenjualanBarang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="6dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:text="Penjualan per Barang"
                            android:textColor="#3f4f4f"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/laporanPenjualanKategori"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconLaporanPenjualanKategori"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="7dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="7dp"
                        android:src="@drawable/ic_master_pelanggan" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textLaporanPenjualanKategori"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="6dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:text="Penjualan per Kategori"
                            android:textColor="#3f4f4f"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/laporanPenjualanPelanggan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconLaporanPenjualanPelanggan"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="7dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="7dp"
                        android:src="@drawable/ic_master_pegawai" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textLaporanPenjualanPelanggan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="6dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:text="Penjualan per Pelanggan"
                            android:textColor="#3f4f4f"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/laporanPenjualanPegawai"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconLaporanPenjualanPegawai"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="7dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="7dp"
                        android:src="@drawable/ic_master_category" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textLaporanPenjualanPegawai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="6dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:text="Penjualan per Pegawai"
                            android:textColor="#3f4f4f"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
