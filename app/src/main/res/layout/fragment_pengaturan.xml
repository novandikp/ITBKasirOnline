<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pengaturan.PengaturanFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:id="@+id/IdentitasToko"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconIdentitas"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="7dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="7dp"
                        android:src="@drawable/ic_baseline_storefront_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textIdentitas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="6dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:text="Identitas Toko"
                            android:textColor="#3f4f4f"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/masterDaftarKategori"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconDaftarKategori"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="7dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="7dp"
                        android:src="@drawable/ic_master_category" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textMasterDaftarKategori"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="6dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:text="Daftar Kategori"
                            android:textColor="#3f4f4f"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/masterProduk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconProduk"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="7dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="7dp"
                        android:src="@drawable/ic_product_master" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textMasterProduk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="6dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:text="Produk"
                            android:textColor="#3f4f4f"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/masterSatuan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconSatuan"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="7dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="7dp"
                        android:src="@drawable/ic_master_satuan" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textMasterSatuan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="6dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:text="Satuan"
                            android:textColor="#3f4f4f"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/masterPelanggan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconPelanggan"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="7dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="7dp"
                        android:src="@drawable/ic_master_pelanggan" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textMasterPelanggan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="6dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:text="Pelanggan"
                            android:textColor="#3f4f4f"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/masterPegawai"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconPegawai"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="7dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="7dp"
                        android:src="@drawable/ic_master_product" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textMasterPegawai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="6dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:text="Pegawai"
                            android:textColor="#3f4f4f"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
